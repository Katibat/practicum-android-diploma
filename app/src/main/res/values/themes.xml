<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PracticumAndroidDiploma" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:textColor">@color/blackDay</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="background">@color/whiteUniversal</item>
        <item name="colorSecondary">@color/blackUniversal</item>
        <item name="colorSecondaryVariant">@color/whiteUniversal</item>
        <item name="colorOnSecondary">@color/lightGray</item>
        <item name="android:statusBarColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorPrimary">@color/gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColorHint">@color/blackUniversal</item>
        <item name="android:background">@null</item>
        <item name="boxStrokeColor">@color/stroke_filtration_text_colors</item>
        <item name="hintTextColor">@color/gray</item>
    </style>
</resources>
